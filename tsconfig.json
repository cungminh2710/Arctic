{
	"compilerOptions": {
		"lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "outDir": "./dist/",
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": "src",
    "removeComments": true,
    "jsx": "react",
		"allowSyntheticDefaultImports": true,
		"pretty": false,
		"sourceMap": true,
		"target": "es5",
		"typeRoots": [
			"./node_modules/@types",
			"./src/builder/interfaces",
		]
	},
	"compileOnSave": true,
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
